begin program "ocp-edit-simple"
      files = [ "sigint_unix.c" "tools.ml" "top.ml" "gui.ml" "ocamlBuffer.ml" "topUi.ml" "main.ml" ]
      requires = [ "threads" "unix" "str"
                   "lablgtk2" "lablgtk2.sourceview2"
                   "ocp-indent" ]
      link = [ "-thread" ]
      comp = [ "-thread" ]
end

begin library "threads"
     installed = true
     dirname = [ "%{OCAMLLIB}%/threads" ]
     has_byte = false
     byte += [ "-custom" ]
end
