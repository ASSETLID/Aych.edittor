begin program "ocaml-top"
      files = [ "tools.ml" "top.ml" "gui.ml" "ocamlBuffer.ml" "topUi.ml" "main.ml" ]
      requires = [ "threads" "unix" "str"
                   "lablgtk2" "lablgtk2.sourceview2"
                   "ocp-indent-lib"
                   "ocp-index-lib" ]
      link = [ "-thread" ]
      comp = [ "-thread" ]
      if system = "win32" then
        files += [ "sigint_win.c" ]
      else
        files += [ "sigint_unix.c" ]
end

begin library "threads"
     installed = true
     dirname = [ "%{OCAMLLIB}%/threads" ]
     has_byte = false
     byte += [ "-custom" ]
end
